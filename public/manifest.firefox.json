{
  "manifest_version": 3,
  "name": "Testovak",
  "version": "1.0.1",
  "description": "Get your exams done in time YOU want!",
  "browser_specific_settings": {
    "gecko": {
      "id": "testovak@extension",
      "strict_min_version": "109.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },
  "content_scripts": [
    {
      "js": ["moodle.js"],
      "css": ["style.css"],
      "matches": ["https://moodle.czu.cz/*"]
    }
  ],
  "host_permissions": ["https://moodle.czu.cz/*"],
  "permissions": ["storage"]
}
