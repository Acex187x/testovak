{
  "name": "Testovak-extension",
  "version": "1.0.2",
  "description": "Get your exams done in time YOU want!",
  "type": "module",
  "scripts": {
    "dev": "BROWSER=chrome vite build --watch",
    "dev:chrome": "BROWSER=chrome vite build --watch",
    "dev:firefox": "BROWSER=firefox vite build --watch",
    "build": "npm run build:chrome && npm run build:firefox",
    "build:chrome": "BROWSER=chrome vite build && tailwindcss -i ./public/style.css -o ./dist-chrome/style.css",
    "build:firefox": "BROWSER=firefox vite build && tailwindcss -i ./public/style.css -o ./dist-firefox/style.css"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-popover": "^1.0.7",
    "@radix-ui/react-progress": "^1.0.3",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-slot": "^1.0.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "lucide-react": "^0.378.0",
    "react": "^18.3.1",
    "react-day-picker": "^8.10.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^2.3.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.267",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.2.1",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.4.5",
    "vite": "^5.4.2"
  }
}
